# Spactral norm 
(require "math.nfl")

(function A (params i j)
	(return
		(/ 1.0 (+ (>> (* (+ i j) (+ i j 1)) 1) i 1))
	)
)

(function Av (params n v)
	(block
	(let Av tpl)
	(def i INTEGER)
	(for (let i 0)(< i n)(++i)
		(let sum 0.0)
		(foreach j in v
			(let sum (+ sum (* (A i j) j)))
		)
		(set Av i sum)
	)
	(return Av)	
	)
)

(function Atv (params n v)
	(block
		(let Atv tpl)
	(def i INTEGER)
		(for (let i 0)(< i n)(++i)
			(let sum 0.0)
			(foreach j in v
				(let sum (+ sum (* sum (A j i) j)))
			)
			(set Atv i sum)
		)
		(return Atv)
	)
)


(function AtAv (params n v)
	(block
		(let tmp (Av n v))
		(return (Atv n tmp))
	)
)


